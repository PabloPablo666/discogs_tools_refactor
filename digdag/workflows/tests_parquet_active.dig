_export:
  !include : '_config.yml'

+tests:
  sh>: |
    set -euo pipefail

    ACTIVE="$DISCOGS_DATA_LAKE/active"
    test -d "$ACTIVE" || test -L "$ACTIVE"

    echo "[PARQUET TESTS - ACTIVE]"
    test -x "$project_root/tests/run_parquet_sanity_active.sh"
    "$project_root/tests/run_parquet_sanity_active.sh" "$ACTIVE"
